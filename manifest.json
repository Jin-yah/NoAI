{
  "manifest_version": 3,
  "name": "NoAI",
  "version": "1.0.0",
  "description": "Blocks Google AI search results.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "webNavigation", "alarms"],
  "host_permissions": ["*://*.google.com/search*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/search*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
